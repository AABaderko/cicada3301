
<MainWidgets>:
    name: "main_screen"
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
        
        Color:
            rgba: 0, 0, 0, 0.1
        BoxShadow:
            size: self.size[0], self.size[1]/10
            pos: self.pos
            blur_radius: self.size[1]/2

        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            size: root.width * 0.96, root.height/6
            pos: root.width * 0.02, 0
            radius: [(40,), (40,), (0,), (0,)]
    CaptionBestBuildings:
        center: 140, root.height - 80
    
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        Image:
            source: 'icons/background_theme.png'
            height: '48dp'
            size_hint: 1, 1
            pos_hint: {'top': 0.5 + self.size_hint[1]/2}
            fit_mode: "fill"
        Label:
    
    ImageButton:
        name: "Photo Button"
        source: 'icons/button_capture.png'
        size: 80, 80
        center: root.width * 0.5, root.height * 0.16
        on_press: app.root.open_camera()

<CameraWidgets>:
    name: "camera_screen"
    CameraPreview:
        id: camera_preview
        size: root.size

    ImageButton:
        name: "Back to menu"
        source: 'icons/button_back.png'
        on_press: (app.root.release_camera(), app.root.open_mainpage())
        # size: 30, 30
        size_hint: .1, .1
        center: 40, root.height - 50
    TakePhoto:
        preview: camera_preview
        source: 'icons/button_capture.png'
        size: 80, 80
        center: root.width * 0.5, root.height * 0.16

<TakedPhotoWidgets>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            size: self.size
            pos: self.pos
    ImageButton:
        name: "Back to menu"
        source: 'icons/button_back.png'
        on_press: app.root.open_mainpage()
        size_hint: .1, .1
        center: 40, root.height - 75
    CaptionBestBuildings:
        center: 140, root.height - 80
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 20
        spacing: 20
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, .1
            Label:
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.4
            TakedPhotoPreview:
                id: taked_photo
                source: 'icons/background_theme.png'
                height: '80dp'
                size_hint: 0.4, 0.6
                fit_mode: "scale-down"
            BoxLayout:
                orientation: "vertical"
                size_hint: 0.4, 0.6
                Label:
                    id: place_category
                    font_name: "fonts/Discovery.otf"
                    text: "Жилой комплекс"
                Label:
                    id: place_name
                    font_name: "fonts/Discovery.otf"
                    text: "Серебрянный ключ"
                Label:
                    id: place_year
                    font_name: "fonts/Discovery.otf"
                    text: "2016 г."
        BoxLayout:
            orientation: "vertical"
            size_y: 200
            Text:
                font_name: "fonts/Discovery.otf"
                text: "ИНФО"
                size_hint: 1, 0.1
            Text:
                id: place_information
                font_name: "fonts/Discovery.otf"
                text: "Бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла молоко бла бла бла бла бла бла бла бла бла бла бла"
            ImageButton:
                name: "Photo Button"
                source: 'icons/button_capture.png'
                size: 80, 80
                center: root.width * 0.5, 0
                on_press: app.root.open_camera()